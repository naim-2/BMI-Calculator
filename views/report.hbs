<!doctype html>
<html lang="en">
    <head>
        <title>Report</title>
        <meta charset="utf-8"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <style>
          .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            {{!-- height: 100vh; --}}
          }
        </style>
    </head>
    <body>
        <h1 class="text-center" style="margin-top: 40px;">BMI Report</h1>
        <div class="container">
          {{#if averageBMI}}
            <div class="row mt-4 text-center">
              <div class="col">
                <h4>Average BMI: {{averageBMI}}</h4>
              </div>
            </div>
          {{else}}
            <div class="row mt-4 text-center">
              <div class="col">
                <p>No user data available</p>
              </div>
            </div>
          {{/if}}

          {{#if highestBMI}}
            <div class="row mt-3 text-center">
              <div class="col">
                <h4>Highest BMI: {{highestBMI}}</h4>
              </div>
            </div>
          {{/if}}

          {{#if lowestBMI}}
            <div class="row mt-3 text-center">
              <div class="col">
                <h4>Lowest BMI: {{lowestBMI}}</h4>
              </div>
            </div>
          {{/if}}

          <div class="row mt-4 text-center">
            <div class="col">
              <a href="/" class="btn btn-primary">Go Back</a>
            </div>
          </div>
        </div>
    </body>
</html>
